<%- include("partials/header") -%> 
<h1>Home</h1>
<p><%=content%></p>
<br>
<% posts.forEach(function(post) { %> 
    <h3><%=post.title%></h3>
    <% if (post.post.length > 120) { %>
        <p><%=post.post.slice(0, 119) + '...'%> <a href=<%= "posts/" + post.title.replace(/\s+/g, '-').toLowerCase()%>>Read More.</a></p>
    <% } else {%> 
        <p><%=post.post%></p>
    <% } %> 
<% }) %>
<%- include("partials/footer") -%> 