<%- include("partials/header") -%> 
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <div class="mb-3">
            <label for="newPostTitle" class="form-label"><strong>Title</strong></label>
            <input type="text" class="form-control" id="newPostTitle" name="newPostTitle" autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="newPost" class="form-label" name="newPost"><strong>Post</strong></label>
            <textarea class="form-control" id="newPost" name="newPost" rows="5"></textarea>
        </div>
    </div>
    <button type="submit" name="publish" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%> 